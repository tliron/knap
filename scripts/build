#!/bin/bash
set -e

# sudo dnf install protobuf-compiler

HERE=$(dirname "$(readlink --canonicalize "$BASH_SOURCE")")
. "$HERE/_env"
. "$HERE/_trap"

git_version

function build () {
	local TOOL=$1
	pushd "$ROOT/$TOOL" > /dev/null
	go install \
		-ldflags " \
			-X 'github.com/tliron/kutil/version.GitVersion=$VERSION' \
			-X 'github.com/tliron/kutil/version.GitRevision=$REVISION' \
			-X 'github.com/tliron/kutil/version.Timestamp=$TIMESTAMP'"
	popd > /dev/null
	m "built $GOPATH/bin/$TOOL"
}

build knap-operator
build knap-provider-bridge
build knap

ln --symbolic --force "$GOPATH/bin/knap" "$GOPATH/bin/kubectl-network"
